{
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist",
    "target": "ES2018",
    "lib": [
      "DOM",
      "ES2018"
    ],
    "sourceMap": true,
    "removeComments": true,
    "declarationMap": true,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src"
  ]
}
